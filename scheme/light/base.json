        "dim": { "value": "{alias.color.palette.grey.400.value}" }
      },
      "surface": {
        "background": { "value": "{alias.color.palette.white.value}" },
        "foreground": { "value": "{alias.color.palette.black.value}" },
        "border": { "value": "{alias.color.palette.grey.300.value}" }
      },
      "on-surface": {
        "background": { "value": "{alias.color.palette.white.value}" },
        "background-disabled": {
          "value": "{alias.color.palette.grey.100.value}"
